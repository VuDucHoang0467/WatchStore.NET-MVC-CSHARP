@model Product

@{
    int numOfQuantity = 1;
}

<div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
    <div class="featured__item">
        <div class="featured__item__pic set-bg" data-setbg=@Url.Content("../SLayoutWatch/img/" + Model.Image) >
            <ul class="featured__item__pic__hover">
                <li><a method="post" asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-productId="@Model.ProductId" asp-route-quantity="@numOfQuantity"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
        </div>
        <div class="featured__item__text">
            <h6><a asp-controller="Home" asp-action="ChiTietSanPham" asp-route-productId="@Model.ProductId">@Model.Name</a></h6>
            <h5>@String.Format("{0:0,0} VNĐ", Model.Price)</h5>
        </div>
    </div>
</div>
