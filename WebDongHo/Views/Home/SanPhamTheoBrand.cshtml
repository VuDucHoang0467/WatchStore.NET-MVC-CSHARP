@{
    ViewData["Title"] = "SanPhamTheoBrand";
    Layout = "~/Views/Shared/_LayoutWatch.cshtml";
}

@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Product>
@foreach (var item in Model)
{
    @await Html.PartialAsync("PartialSanPham", item)
}
<div class="product__pagination blog__pagination">
    @Html.PagedListPager(Model, page => Url.Action("SanPhamTheoBrand", new { page = page, brandId = ViewBag.brandId }))
</div>

