@model WebDongHo.Models.ProductImage

@{
    ViewData["Title"] = "XemChiTietAnhSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Xem chi tiết ảnh sản phẩm</h1>

<div>
    <h4>Ảnh sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            <img src="/SLayoutWatch/img/anhsanpham/@Model.Url" alt="Product Image" style="max-width: 150px; max-height: 150px;" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="SuaAnhSanPham" asp-route-pictureId="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="DanhMucAnhSanPham" class="btn btn-secondary">Back to List</a>
</div>
