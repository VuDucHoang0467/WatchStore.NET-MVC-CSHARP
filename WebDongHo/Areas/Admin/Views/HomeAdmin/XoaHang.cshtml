@model WebDongHo.Models.Brand

@{
    ViewData["Title"] = "XoaHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Xóa thương hiệu</h1>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4>Thương hiệu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="XoaHang" asp-route-brandId="@Model.BrandId" method="post">
        <input type="hidden" asp-for="BrandId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="DanhMucHang" class="btn btn-secondary">Back to List</a>
    </form>
</div>
