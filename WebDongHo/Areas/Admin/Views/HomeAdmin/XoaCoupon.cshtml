@model WebDongHo.Models.DiscountCode

@{
    ViewData["Title"] = "XoaCoupon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Xóa Mã Giảm Giá</h1>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4>Coupon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisPercentage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisPercentage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsageLimit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsageLimit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpiryDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpiryDate)
        </dd>
    </dl>

    <form asp-action="XoaCoupon" asp-route-discountId="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="DanhMucCoupon" class="btn btn-secondary">Back to List</a>
    </form>
</div>
